<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">

    <Style TargetType="{x:Type xctk:InputBase}" x:Key="DefaultLongUpDownStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type xctk:InputBase}">

                    <TextBox x:Name="PART_TextBox" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style BasedOn="{StaticResource DefaultLongUpDownStyle}" TargetType="{x:Type xctk:LongUpDown}" />
    <Style BasedOn="{StaticResource DefaultLongUpDownStyle}" TargetType="{x:Type xctk:DoubleUpDown}" />
    <Style BasedOn="{StaticResource DefaultLongUpDownStyle}" TargetType="{x:Type xctk:IntegerUpDown}" />

</ResourceDictionary>